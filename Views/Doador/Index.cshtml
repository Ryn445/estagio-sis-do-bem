@{
    ViewData["Title"] = "Cadastro de Doadores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">🧍‍♂️ Doadores</h2>
        <a asp-controller="Doador" asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Novo Doador
        </a>
    </div>

    <!-- Caixa de busca -->
    <div class="input-group mb-3 shadow-sm">
        <input type="text" class="form-control" placeholder="Buscar doador..." id="searchDoador">
        <button class="btn btn-outline-primary" type="button" id="btnBuscarDoador">Buscar</button>
    </div>

    <!-- Tabela de doadores -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Nome</th>
                        <th>CPF / CNPJ</th>
                        <th>Telefone</th>
                        <th>E-mail</th>
                        <th>Tipo</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Exemplo estático -->
                    <tr>
                        <td>Maria Santos</td>
                        <td>123.456.789-10</td>
                        <td>(61) 99999-0000</td>
                        <td>maria@email.com</td>
                        <td>Pessoa Física</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning" href="#"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-sm btn-danger" href="#"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>Supermercado Central</td>
                        <td>12.345.678/0001-99</td>
                        <td>(61) 98888-7777</td>
                        <td>contato@supercentral.com</td>
                        <td>Pessoa Jurídica</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning" href="#"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-sm btn-danger" href="#"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
    <script>
        document.getElementById("btnBuscarDoador").addEventListener("click", function () {
            const termo = document.getElementById("searchDoador").value.toLowerCase();
            const linhas = document.querySelectorAll("tbody tr");
            linhas.forEach(linha => {
                const texto = linha.textContent.toLowerCase();
                linha.style.display = texto.includes(termo) ? "" : "none";
            });
        });
    </script>
}
