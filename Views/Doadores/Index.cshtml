@{
    ViewData["Title"] = "Doadores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">Lista de Doadores</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Novo Doador
        </a>
    </div>

    <!-- Tabela de doadores -->
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Telefone</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            <!-- Exemplo de linhas (fictícias por enquanto) -->
            <tr>
                <td>Maria Silva</td>
                <td>123.456.789-00</td>
                <td>maria@email.com</td>
                <td>(61) 99999-1234</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i> Editar</a>
                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
            <tr>
                <td>João Pereira</td>
                <td>987.654.321-00</td>
                <td>joao@email.com</td>
                <td>(61) 98888-4321</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i> Editar</a>
                    <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
}
